<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.instefa.cafepickpos.model">
	<class lazy="false" name="PizzaCrust" table="PIZZA_CRUST">
		<id column="ID" name="id" type="java.lang.Integer">
			<generator class="hilo">
				<param name="table">id_table</param>
				<param name="column">next_value</param>
				<param name="max_lo">1</param>
			</generator>
		</id>

		<property name="name" column="NAME" type="java.lang.String" length="60" />
		<property name="translatedName" column="TRANSLATED_NAME" type="java.lang.String" length="60" />
		<property name="description" column="DESCRIPTION" type="java.lang.String" length="120" />
		<property name="sortOrder" column="SORT_ORDER" type="java.lang.Integer" />
		<property name="defaultCrust" column="DEFAULT_CRUST" type="java.lang.Boolean" />
	</class>
</hibernate-mapping>
