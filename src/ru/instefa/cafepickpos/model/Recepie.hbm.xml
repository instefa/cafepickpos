<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.instefa.cafepickpos.model">
	<class lazy="false" name="ru.instefa.cafepickpos.model.Recepie" table="RECEPIE">
		<id column="ID" name="id" type="java.lang.Integer">
			<generator class="identity" />
		</id>
		
		<many-to-one class="ru.instefa.cafepickpos.model.MenuItem" lazy="false" name="menuItem">
			<column name="MENU_ITEM" />
		</many-to-one>

		<bag cascade="all" inverse="false" lazy="false" name="recepieItems">
			<key>
				<column name="RECEPIE_ID" />
			</key>
			<one-to-many class="ru.instefa.cafepickpos.model.RecepieItem"  />
		</bag>
	</class>
</hibernate-mapping>
