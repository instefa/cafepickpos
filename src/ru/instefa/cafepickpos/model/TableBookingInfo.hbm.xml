<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.instefa.cafepickpos.model">
	<class lazy="false" name="ru.instefa.cafepickpos.model.TableBookingInfo" table="TABLE_BOOKING_INFO">
		<id column="ID" name="id" type="java.lang.Integer">
			<generator class="hilo">
				<param name="table">id_table</param>
				<param name="column">next_value</param>
				<param name="max_lo">1</param>
			</generator>
		</id>


		<property column="FROM_DATE" index="fromDate" name="fromDate" type="java.util.Date" />
		<property column="TO_DATE" index="toDate" name="toDate" type="java.util.Date" />
		<property column="GUEST_COUNT" name="guestCount" type="java.lang.Integer" />
		<property column="STATUS" name="status" type="string" length="30" not-null="true" />
		<property column="PAYMENT_STATUS" name="paymentStatus" type="string" length="30" />
		<property column="BOOKING_CONFIRM" name="bookingConfirm" type="string" length="30" />
		<property column="BOOKING_CHARGE" name="bookingCharge" type="java.lang.Double" />
		<property column="REMAINING_BALANCE" name="remainingBalance" type="java.lang.Double" />
		<property column="PAID_AMOUNT" name="paidAmount" type="java.lang.Double" />
		<property column="BOOKING_ID" name="bookingId" type="string" length="30" not-null="true" unique="true" />
		<property column="BOOKING_TYPE" name="bookingType" type="string" length="30" />
        
        <!-- 20170812, pymancer, booking service fields sync -->
        <property column="ANTIBOT" name="antibot" type="java.lang.Boolean" not-null="true" />
        <property column="GUEST" name="guest" type="java.lang.Integer" />
        <property column="NAME" name="name" type="string" length="50" />
        <property column="TOKEN" name="token" type="string" length="10" />
        <property column="PHONE" name="phone" type="string" length="17" />
        <property column="COMMENT" name="comment" type="string" length="500" />

		<!-- Associations -->


		<bag name="tables" cascade="none" inverse="false" lazy="false" table="TABLE_BOOKING_MAPPING">
			<key column="BOOKING_ID" />
			<many-to-many column="TABLE_ID" class="ru.instefa.cafepickpos.model.ShopTable" />
		</bag>

		<many-to-one class="ru.instefa.cafepickpos.model.User" lazy="false" name="user">
			<column name="user_id" />
		</many-to-one>

		<many-to-one class="ru.instefa.cafepickpos.model.Customer" lazy="false" name="customer">
			<column name="customer_id" />
		</many-to-one>





	</class>
</hibernate-mapping>
